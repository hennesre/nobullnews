extends layout2

block content
  h1 Haystack News

    if documents.length
        table.listing-table.table-dark.table-striped
            tr
                th Source
                th Title
                th Date
                th Link
            each document in documents
                tr
                    td= document.source
                    td= document.title
                    td= document.date
                    td= document.link
    else
        p No news yet :(

